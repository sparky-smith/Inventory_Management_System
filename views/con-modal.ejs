<%- include('include/_header.ejs')%>
<%- include('include/_modalstyle.ejs')%>
</head>

<div class="modal hidden" id="#condemnation_form">
    <form action="/api/condemnation" method="POST">
        <div class="form-group">
            <label for="id">ID</label>
            <input type="text" name="id">
        </div>
        <div class="form-group">
            <label for="">Ledger</label>
            <input type="text" name="ledger">
        </div>
        <div class="form-group">
            <label for="">Page</label>
            <input type="text" name="page">
        </div>
        <div class="form-group">
            <label for="">Nomenclature</label>
            <input type="text" name="nomenclature">
        </div>
        <div class="form-group">
            <label for="">A/U(unit)</label>
            <input type="text" name="unit">
        </div>
        <div class="form-group">
            <label for="">Quantity</label>
            <input type="number" name="quantity">
        </div>
        <div class="form-group"><label for="">Serv(S)/ Unserv(US)</label>
            <input type="text" name="serv">
        </div>
        <div class="form-group"><label for="">Cost of Procurement</label>
            <input type="number" name="cost_of_procurement">
        </div>
        <div class="form-group"><label for="">Date of year of Procurement</label>
            <input type="date" name="date_of_procurement">
        </div>
        <div class="form-group"><label for="">No of years of useful service</label>
            <input type="number" name="no_of_years_of_service">
        </div>
        <div class="form-group"><label for="">No of years of non-utilization</label>
            <input type="number" name="no_of_years_of_nonutilization">
        </div>
        <div class="form-group"><label for="">Reason for disposal</label>
            <input type="text" name="reason_for_disposal">
        </div>
        <div class="form-group"><label for="">R / NR</label>
            <input type="text" name="r_nr">
        </div>
        <div class="form-group"><label for="">Disposal Action</label>
            <input type="text" name="disposal_action">
        </div>
        <div class="form-group"><label for="">Salvage/scrap weight</label>
            <input type="text" name="salvage">
        </div>
        <div class="form-group">
            <button type="submit" class="btn">Save</button>
        </div>
    </form>
</div>
<%- include('include/_footer.ejs')%>