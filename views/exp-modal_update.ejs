<%- include('include/_header.ejs')%>
<%- include('include/_modalstyle.ejs')%>
</head>

<div class="modal hidden"   >
    <form action="/update-expandable/<%= exp._id%>" id="#update_expandable_form" method="POST">
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" name="date" value="<%= exp.date%>">
        </div>
        <div class="form-group">
            <label for="">Nomenclature of Expandable Stores</label>
            <input type="text" name="nomenclature_of_expandable" value="<%= exp.nomenclature_of_expandable%>">
        </div>
        <div class="form-group">
            <label for="">Quantity</label>
            <input type="number" name="quantity" value="<%= exp.quantity%>">
        </div>
        <div class="form-group">
            <label for="">Purpose of issue</label>
            <input type="text" name="purpose_of_issue" value="<%= exp.purpose_of_issue%>">
        </div>
        <div class="form-group">
            <label for="">Name of Consumer</label>
            <input type="text" name="name_of_consumer" value="<%= exp.name_of_consumer%>">
        </div>
        <div class="form-group">
            <label for="">Remarks</label>
            <input type="text" name="remarks" value="<%= exp.remarks%>">
        </div>
        <div class="form-group">
            <button type="submit" class="btn">Update</button>
        </div>
    </form>
</div>
<%- include('include/_footer.ejs')%>